<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parking.ParkingLot1"
    android:orientation="vertical"
    android:id="@+id/container"
    android:background="#123456"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/download1"/>

            
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <Button
        android:id="@+id/button_1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#04ea00"
        android:textColor="#ffffff"
        android:text="1"/>

        <Button
        android:id="@+id/button_2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/button_1"
        android:layout_toEndOf="@+id/button_1"
        android:layout_marginLeft="5dp"
        android:background="#04ea00"
        android:textColor="#ffffff"
        android:text="2"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/button_2"
            android:layout_toEndOf="@+id/button_2"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="3"/>

        <Button
            android:id="@+id/button_4"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_1"
            android:layout_marginTop="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="4"/>

        <Button
            android:id="@+id/button_5"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_2"
            android:layout_toRightOf="@+id/button_4"
            android:layout_toEndOf="@+id/button_4"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="5"/>

        <Button
            android:id="@+id/button_6"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_3"
            android:layout_toRightOf="@+id/button_5"
            android:layout_toEndOf="@+id/button_5"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="6"/>

        <Button
            android:id="@+id/button_7"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_4"
            android:layout_marginTop="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="7"/>

        <Button
            android:id="@+id/button_8"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_5"
            android:layout_toRightOf="@+id/button_7"
            android:layout_toEndOf="@+id/button_7"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="8"/>

        <Button
            android:id="@+id/button_9"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_6"
            android:layout_toRightOf="@+id/button_8"
            android:layout_toEndOf="@+id/button_8"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="9"/>
        <Button
            android:id="@+id/button_10"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_7"
            android:layout_marginTop="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="10"/>

        <Button
            android:id="@+id/button_11"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_8"
            android:layout_toRightOf="@+id/button_4"
            android:layout_toEndOf="@+id/button_4"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="11"/>

        <Button
            android:id="@+id/button_12"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_9"
            android:layout_toRightOf="@+id/button_5"
            android:layout_toEndOf="@+id/button_5"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="12"/>

        <Button
            android:id="@+id/button_13"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/button_10"
            android:layout_marginTop="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="13"/>

        <Button
            android:id="@+id/button_14"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_11"
            android:layout_toRightOf="@+id/button_4"
            android:layout_toEndOf="@+id/button_4"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="14"/>

        <Button
            android:id="@+id/button_15"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/button_12"
            android:layout_toRightOf="@+id/button_5"
            android:layout_toEndOf="@+id/button_5"
            android:layout_marginLeft="5dp"
            android:background="#04ea00"
            android:textColor="#ffffff"
            android:text="15"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/button_sub"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="65dp"
            android:background="@drawable/button1"
            android:textColor="#ffffff"
            android:text="Submit"/>
    </LinearLayout>

</LinearLayout>